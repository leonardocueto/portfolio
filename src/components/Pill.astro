---
const { url, externalUrl = false } = Astro.props
---

{
    externalUrl ? (
        <a
            href={url}
            class='rounded-full text-gray-800 dark:text-gray-200 border border-gray-300 dark:border-gray-700 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 text-xs md:text-base md:px-4 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform'
            target='_blank'
            rel='noopener noreferrer'
        >
            <slot />
        </a>
    ) : (
        <a
            href={url}
            class='rounded-full text-gray-800 dark:text-gray-200 border border-gray-300 dark:border-gray-700 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 text-xs md:text-base md:px-4 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform'
        >
            <slot />
        </a>
    )
}
