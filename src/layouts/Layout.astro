import "../styles/global.css";

const currentLang = Astro.currentLocale || "en";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="Portfolio de Leonardo Daniel Cueto, desarrollador frontend especializado en React, Astro y TailwindCSS. DiseÃ±o y desarrollo de interfaces modernas, accesibles y optimizadas para performance."
